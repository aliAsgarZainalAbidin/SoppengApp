<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="id.deval.soppengapp.fragment.destination.DestinationFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorSecondary"
            android:paddingHorizontal="@dimen/_12dp"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:menu="@menu/menu_home"
            app:navigationIcon="@drawable/ic_nav_back">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cinzel"
                android:gravity="center"
                android:text="Destination"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_16sp" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/fl_destination_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kolam" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginBottom="@dimen/_12dp"
                    android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:drawablePadding="@dimen/_16dp"
                    android:fontFamily="@font/cinzel"
                    android:text="Kolam Abadi"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_destination_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                app:layout_constraintTop_toBottomOf="@id/fl_destination_1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/villa" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginBottom="@dimen/_12dp"
                    android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:drawablePadding="@dimen/_16dp"
                    android:fontFamily="@font/cinzel"
                    android:text="Villa Yuliana"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_destination_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16dp"
                android:layout_marginBottom="@dimen/_16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fl_destination_2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lembah" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginBottom="@dimen/_12dp"
                    android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:drawablePadding="@dimen/_16dp"
                    android:fontFamily="@font/cinzel"
                    android:text="Lembah Cinta"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sp" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>